                    },
                    "priority":{
                        "type": "integer",
                        "format": "int32",
                        "required": true,
                        "default": 1

                    },
                    "tags" : {
                        "type": "array",
                        "required": false,
                        "minItems": 1,
                        "items" :{
                            "type": "string",
                            "minLength": 1
                        }
                    }
                }
            },
            "ArrayTodolist" :{
                "type": "array",
