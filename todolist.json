                "tags": ["Todolist"],
                "summary": "Delete extisting todolist",
                "description": "Delete extisting todolist in database",
                "parameters": [
                    {
                        "$ref" : "#/components/parameters/TodolistIdDelete"
                    }
                ],
                
                "responses": {
                    "200" :{
                        "description": "Success delete todolist",
